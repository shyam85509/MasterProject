@model IEnumerable<coretask2.Models.DisplayModel>
@{
    ViewData["Title"] = "ShowMaster";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
    <style>
        body {
            /*background-image: url('/Content/Images/sahb4.jpg');*/
            background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, Helvetica, sans-serif;
        }
        table {
            width: 100%;
            font-size: 1rem;
            font-family: Arial, Helvetica, sans-serif;
        }

        thead {
            background-color: blue;
            color: aliceblue;
        }

        tbody {
        }

    </style>
</head>
<body>
    <table class="table table-striped">
        <thead class="form-group">
            <tr>
                <th>Master Id</th>
                <th>Name</th>
                <th>Email Id</th>
                <th>Password</th>
                <th>Mobile</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Department</th>
                <th>Nationality</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="form-group text-light">
            @foreach (var item in Model)
            {
                <tr class="table-active text-warning">
                    <td> @item.Maste_ID </td>
                    <td> @item.Name </td>
                    <td> @item.email </td>
                    <td> @item.password </td>
                    <td> @item.mobile </td>
                    <td> @item.gender </td>
                    <td> @item.age </td>
                    <td> @item.department </td>
                    <td> @item.nationality </td>
                    <td> @item.status </td>
                    <td>
                        @Html.ActionLink("Detial", "Detial", "MasterCRUD") |
                        @Html.ActionLink("Edit", "Edit", "MasterCRUD", new{id=item.Id}) |
                        @Html.ActionLink("Delete", "Delete", "MasterCRUD", new{id=item.Id}) |
                    </td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>
